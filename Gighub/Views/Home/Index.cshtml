 @model IEnumerable<Gighub.Models.Gig>

@{
    ViewBag.Title = "Home Page";
}

<ul class="gigs">
    @foreach (var gig in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.Datetime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.Datetime.ToString("dd")
                </div>
            </div>
            <div class="details" position="absolute">
                <span class="artist">
                    @gig.Artist.Name
                </span>
                <span class="genre">
                    @gig.Genre.Name
                </span>
            </div>
        </li>
    }
</ul>

